= form_for @active_imap_message do |f|
  - if @active_imap_message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@active_imap_message.errors.count, "error")} prohibited this active_imap_message from being saved:"
      %ul
        - @active_imap_message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :from
    = f.text_field :from
  .field
    = f.label :sender
    = f.text_field :sender
  .field
    = f.label :to
    = f.text_field :to
  .field
    = f.label :date
    = f.date_select :date
  .field
    = f.label :text_content
    = f.text_area :text_content
  .actions
    = f.submit 'Save'
