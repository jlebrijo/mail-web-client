%h3 Sign up
= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = devise_error_messages!
  %p
    = f.text_field :name, {:placeholder => "Full name"}
  %div
    = f.email_field :email, {:placeholder => "Email"}
    = f.text_field :imap_password, {:placeholder => "Inbox password"}
  %div
    = f.password_field :password, {:placeholder => "New password"}
  %div
    = f.password_field :password_confirmation, {:placeholder => "Confirm new password"}
  %div= f.submit "Sign up",{:class => ["btn","btn-primary"]}
= render "devise/shared/links"
